<form method="<%= method %>">
    <label for="name"> Name: </label>
    <input type="text" name="name" value="<%= typeof category != "undefined" ? category.name : ''%>" required />
    <br />
    <label for="description"> Description: </label>
    <input type="text" name="description" value="<%= typeof category != "undefined" ? category.description : ''%>" required />
    <br />

    <button type="submit">Submit</button>
</form>
